@model IEnumerable<InventoryManagementSystem.Models.Product>

@{
    ViewData["Title"] = "Products Page";
}

<h2 class="mb-3">Products List</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>Quantity</th>
                <th style="width:150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td> <!-- Currency format -->
                <td>@product.CategoryId</td>
                <td>@product.Quantity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-primary me-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No products available. Click below to add one.
    </div>
}

